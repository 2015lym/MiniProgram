<!--pages/insurance/buy-insurance/buy-insurance.wxml-->
<i-panel title="电梯安全责任保险">
  <i-input right title="承保公司" value="{{submitData.insuranceCarriers}}" disabled/>
  <i-input right title="保险金额" value="500万元/电梯" disabled/>
  <ym-picker title="保险起期" mode="date" bind:selectEvent="selectStartTime"></ym-picker>
  <i-input right title="保险止期" value="{{endTime}}" disabled/>
  <ym-picker title="保险方案" mode="selector" range="{{bxfaArray}}" value="0" displayValue="辽宁电梯平台 - 住宅" bind:selectEvent="selectBxfa"></ym-picker>
  <i-input right title="保费" value="{{price}}" disabled/>
  <ym-picker title="电梯类型" mode="selector" range="{{dtlxArray}}" bind:selectEvent="selectDtlx"></ym-picker>
</i-panel>

<i-panel title="投保人信息">
  <i-input right title="投保人名称" value="{{submitData.entity.applicant.apltName}}" placeholder="请输入" bind:change="changeApltName" />
  <i-input right title="投保人证件类型" value="营业执照" disabled/>
  <i-input right title="投保人证件号码" placeholder="请输入" bind:change="changeApltCretCode"/>
  <i-input right title="投保人移动电话" placeholder="请输入" bind:change="changeApltMobile"/>
  <i-input right title="投保人固定电话" placeholder="请输入(可选)" bind:change="changeApltTelephone"/>
  <i-input right title="投保人邮箱" placeholder="请输入(可选)" bind:change="changeApltEmail"/>
  <i-input right title="投保人地址" placeholder="请输入(可选)" bind:change="changeApltAddress"/>
</i-panel>


<i-panel title="被保人信息">
  <i-cell title="同投保人信息" class="cell-color">
    <i-switch value="{{isEqualPeople}}" bind:change="changeRecognizee" slot="footer"></i-switch>
  </i-cell>
</i-panel>

<view wx:if="{{!isEqualPeople}}">
  <i-panel title="被保人信息" wx:for="{{recognizeeInfo}}" wx:key="{{Id}}" >
    <i-button wx:if="{{index>0}}" data-index="{{index}}" bind:click="deleteRecognizee" type="error" >删除被保人</i-button>
    <i-input right title="被保人名称" value="{{submitData.entity.applicant.apltName}}"/>
    <i-input right title="被保人证件类型" value="营业执照" disabled/>
    <i-input right title="被保人证件号码" value="" placeholder="请输入" />
    <i-input right title="被保人移动电话" value="" placeholder="请输入" />
    <i-input right title="被保人固定电话" value="" placeholder="请输入(可选)" />
    <i-input right title="被保人邮箱" value="" placeholder="请输入(可选)" />
    <i-input right title="被保人地址" value="" placeholder="请输入(可选)" />
  </i-panel>
  <i-button bind:click="addRecognizee">添加被保人</i-button>
</view>

<i-panel title="支付与发票信息">
  <i-input right title="支付方式" value="微信" disabled/>
  <ym-picker title="发票类型" mode="selector" range="{{invoiceArray}}" value="0" displayValue="普票" bind:selectEvent="selectInvoice"></ym-picker>
  <i-input wx:if="{{submitData.invoiceType == '0'}}" right title="电子发票接收邮箱" bind:change="changeInvoiceReceivMail" placeholder="请输入" />
  <view wx:if="{{submitData.invoiceType == '1'}}">
    <i-input right title="开户银行" bind:change="changeInvoiceBank" placeholder="请输入" />
    <i-input right title="银行账户" bind:change="changeInvoiceBankNum" placeholder="请输入" />
    <i-input right title="电话号码" bind:change="changeInvoicePhone" placeholder="请输入" />
    <i-input right title="单位地址" bind:change="changeInvoiceAddress" placeholder="请输入" />
  </view>
</i-panel>
<text wx:if="{{submitData.invoiceType == '1'}}" class="sign-text">提示：专票请到【太平洋保险】营业网点领取。</text>

<i-panel title="电子保单发送通知">
  <i-cell title="短信通知" class="cell-color">
    <i-switch value="{{isSendNote}}" bind:change="changeSendNote" slot="footer"></i-switch>
  </i-cell>
  <i-input right title="接收短信手机号码" value="{{submitData.entity.elcPolicy.elcMobile}}" placeholder="请输入" bind:change="changeInvoiceMobile"/>
  <i-cell title="邮件通知" class="cell-color">
    <i-switch value="{{isSendEmail}}" bind:change="changeSendEmail" slot="footer"></i-switch>
  </i-cell>
  <i-input right title="接收邮箱" value="{{submitData.entity.elcPolicy.elcEmail}}" placeholder="请输入" bind:change="changeInvoiceEmail"/>
</i-panel>

<i-panel title="经办人信息">
  <i-input right title="经办人代码" value="{{submitData.operatorCode}}" placeholder="请输入" bind:change="changeOperatorCode"/>
  <i-input right title="代理点代码" value="{{submitData.proxyPointCode}}" placeholder="请输入" bind:change="changeProxyPointCode"/>
</i-panel>

<i-button bind:click="submit" type="primary">提交保单</i-button>
<i-button bind:click="back">返回</i-button>

<i-toast id="toast" />