<!--pages/insurance/buy-insurance/buy-insurance.wxml-->
<i-panel title="电梯安全责任保险">
  <i-input right title="承保公司" value="太平洋保险" disabled/>
  <i-input right title="保险金额" value="500万元/电梯" disabled/>
  <ym-picker title="保险起期" mode="date" bind:selectEvent="selectStartTime"></ym-picker>
  <i-input right title="保险止期" value="{{endTime}}" disabled/>
  <ym-picker title="保险方案" mode="selector" range="{{bxfaArray}}" value="0" displayValue="辽宁电梯平台 - 住宅" bind:selectEvent="selectBxfa"></ym-picker>
  <i-input right title="保费" value="{{price}}" disabled/>
  <ym-picker title="电梯类型" mode="selector" range="{{dtlxArray}}" bind:selectEvent="selectDtlx"></ym-picker>
</i-panel>

<i-panel title="投保人信息">
  <i-input right title="投保人名称" value="沈阳万科物业服务有限公司" disabled/>
  <i-input right title="投保人证件类型" value="营业执照" disabled/>
  <i-input right title="投保人证件号码" value="" placeholder="请输入" />
  <i-input right title="投保人移动电话" value="" placeholder="请输入" />
  <i-input right title="投保人固定电话" value="" placeholder="请输入(可选)" />
  <i-input right title="投保人邮箱" value="" placeholder="请输入(可选)" />
  <i-input right title="投保人地址" value="" placeholder="请输入(可选)" />
</i-panel>


<i-panel title="被保人信息">
  <i-cell title="同投保人信息" class="cell-color">
    <i-switch value="{{isEqualPeople}}" bind:change="changeRecognizee" slot="footer"></i-switch>
  </i-cell>
</i-panel>

<view wx:if="{{!isEqualPeople}}">
  <i-panel title="被保人信息" wx:for="{{recognizeeInfo}}" wx:key="Id">
    <i-input right title="被保人名称" value="沈阳万科物业服务有限公司" disabled/>
    <i-input right title="被保人证件类型" value="营业执照" disabled/>
    <i-input right title="被保人证件号码" value="" placeholder="请输入" />
    <i-input right title="被保人移动电话" value="" placeholder="请输入" />
    <i-input right title="被保人固定电话" value="" placeholder="请输入(可选)" />
    <i-input right title="被保人邮箱" value="" placeholder="请输入(可选)" />
    <i-input right title="被保人地址" value="" placeholder="请输入(可选)" />
  </i-panel>
  <i-button bind:click="addRecognizee">添加被保人</i-button>
</view>

<i-panel title="支付与发票信息">
  <i-input right title="支付方式" value="微信" disabled/>
  <ym-picker title="发票类型" mode="selector" range="{{invoiceArray}}" value="0" displayValue="普票" bind:selectEvent="selectInvoice"></ym-picker>
  <i-input right title="电子发票接收邮箱" value="" placeholder="请输入" />
</i-panel>

<i-panel title="电子保单发送通知">
  <i-cell title="短信通知" class="cell-color">
    <i-switch value="{{isSendNote}}" bind:change="changeSendNote" slot="footer"></i-switch>
  </i-cell>
  <i-input right title="接收短信手机号码" value="" placeholder="请输入" />
  <i-cell title="邮件通知" class="cell-color">
    <i-switch value="{{isSendEmail}}" bind:change="changeSendEmail" slot="footer"></i-switch>
  </i-cell>
  <i-input right title="接收邮箱" value="" placeholder="请输入" />
</i-panel>

<i-button bind:click="submit" type="primary">提交保单</i-button>
<i-button bind:click="back">返回</i-button>

<i-toast id="toast" />