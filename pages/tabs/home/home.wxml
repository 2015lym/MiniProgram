<!--pages/home.wxml-->
<swiper wx:if="{{bnrUrl.length > 0}}" class="swiper-banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000" circular="true">
  <block wx:for="{{bnrUrl}}" wx:key="id">
    <swiper-item>
      <image src="{{baseUrl + item.ImgUrl}}" class="swiper-banner-img" mode="aspectFill"></image>
    </swiper-item>
  </block>
</swiper>
<view class="care-text">我关注的电梯</view>

<i-card wx:for="{{listData}}" wx:for-item="item" wx:key="Id" data-item="{{item}}" bindtap="gotoDetail">
  <view slot="content">
    <view class="list-content-view">
      <text>
        所在楼层 <text space="nbsp" class="color-text blue-text">  {{item.Floor}}↑ </text>
      </text>
      <text>
        楼层繁忙度 <text wx:if="{{item.FloorBusyness == '繁忙'}}" space="nbsp" class="color-text red-text"> 繁忙 </text>
      <text wx:if="{{item.FloorBusyness == '一般'}}" space="nbsp" class="color-text blue-text"> 一般 </text>
      <text wx:if="{{item.FloorBusyness == '空闲'}}" space="nbsp" class="color-text green-text"> 空闲 </text>
      </text>
      <text>
        综合评分 <text wx:if="{{item.ComprehensiveScore >= 85}}" space="nbsp" class="color-text green-text">  {{item.ComprehensiveScore}}  </text>
      <text wx:elif="{{item.ComprehensiveScore >= 70}}" space="nbsp" class="color-text blue-text">  {{item.ComprehensiveScore}}  </text>
      <text wx:elif="{{item.ComprehensiveScore >= 60}}" space="nbsp" class="color-text orange-text">  {{item.ComprehensiveScore}}  </text>
      <text wx:elif="{{item.ComprehensiveScore < 60}}" space="nbsp" class="color-text red-text">  {{item.ComprehensiveScore}}  </text>
      </text>
    </view>
    <view class="margin-top-class">
      <i-icon type="coordinates_fill" size="20" />
      <text> {{item.InstallationAddress}}</text>
    </view>
  </view>
  <view slot="footer" class="list-footer">
    <view class="list-footer-view">
      <text>距离上次维保时间(天):{{item.MaintenanceDays}}\n\n故障(次):{{item.RescueTimes}}</text>
    </view>
    <view class="list-footer-view">
      <text>救援(次):{{item.NumberOfFailures}}\n\n不文明次数(次):{{item.NumberOfUncivilizedTimes}}</text>
    </view>
  </view>
</i-card>