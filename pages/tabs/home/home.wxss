/* pages/home.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: auto;
}

.top-view {
  width: 100%;
  height: 60px;
  background-color: #007aff;
  font-size: 14px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.button-view {
  width: 70px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
  color: white;
  background-color: #007aff;
}

.button-select-view {
  width: 70px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
  color: #007aff;
  background-color: white;
}

.map-view {
  width: 100%;
  height: 100%;
}

.resuce-info {
  display: flex;
  justify-content: space-around;
  height: 35px;
}

.resuce-info-button {
  border-right: 1px solid #e9eaec;
  text-align: center;
  line-height: 35px;
  background-color: white;
  width: 50%;
}

.sub-view {
  display: flex;
}

.video-view {
  width: 50%;
}

.video-button {
  margin-top: 8px;
  margin-left: 15px;
  color: #fff;
  background-color: rgba(1, 1, 1, 0.6);
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}

.refresh-button {
  margin-top: 8px;
  margin-right: 15px;
  color: #fff;
  background-color: #19be6b;
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}

.left-image {
  width: 45px;
  height: 45px;
  margin-top: 8px;
  margin-left: 15px;
}

.bottom-view {
  height: 50px;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.bottom-flex-view {
  display: flex;
  justify-content: space-around;
  height: 50px;
}

.bottom-view-item {
  border-right: 1px solid #e9eaec;
  margin-top: 5px;
  line-height: 15px;
  text-align: center;
  background-color: white;
  width: 25%;
  font-size: 11px;
  white-space: pre-line;
}

.banner-img {
  width: 100%;
  height: inherit;
}

.card-view {
  display: flex;
}

.card-left-view {
  width: 30%;
}

.card-right-view {
  width: 70%;
}

.card-footer {
  margin-left: 16px;
  margin-bottom: 8px;
}
