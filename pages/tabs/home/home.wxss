/* pages/home.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: auto;
}

.top-view {
  width: 100%;
  height: 60px;
  background-color: #007aff;
  font-size: 14px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}

.button-view {
  width: 70px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
  color: white;
  background-color: #007aff;
}

.button-select-view {
  width: 70px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
  color: #007aff;
  background-color: white;
}

.map-view {
  width: 100%;
  height: 100%;
}

.map-button-view {
  width: 100px;
  height: auto;
  position: absolute;
  right: 0px;
  top: 0px;
}
